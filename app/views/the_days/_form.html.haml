= form_for @the_day do |f|
  -if @the_day.errors.any?
    #error_explanation
      %h2= "#{pluralize(@the_day.errors.count, "error")} prohibited this the_day from being saved:"
      %ul
        - @the_day.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
